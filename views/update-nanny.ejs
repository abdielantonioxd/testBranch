<!DOCTYPE html>
<html lang="en" ng-app="nannyApp">
<% include partials/head/headJoin%>

<body>
  <% include partials/header/header%>
  <div class="container-fluit m-1" ng-controller="ctrl-update">
    <div class="row">
      <div class="col-12">
        <nav aria-label="breadcrumb">
          <button class="btn btn-danger  btn-sm">
             <i class="far fa-id-card m-2"></i> 
             <a class="text-white" href="/perfil-nanny?nanny={{id.nanny}}">Ver Perfil</a></button>
          <button class="btn btn-warning btn-sm" data-toggle="modal" data-target=".bd-example-modal-lg">
             <i class="far fa-id-card m-2"></i> Editar imagen principal </button>
        </nav>
      </div>
      <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="container">
              <div class="row">
                <div class="col-12 d-flex justify-content-center">
                  <div class="card-body">
                    <form class="ng-pristine ng-valid">
                      <h4 class="text-center"> Imagen Principal</h4>
                      <div class="form-group">
                        <!-- <label for="exampleInputEmail1">Imagen</label> -->
                        <input type="hidden" class="form-control" id="imagen" aria-describedby="emailHelp" disabled="" autocomplete="off" value="perfil.png">
                        <div class="row ">
                          <div class=" col-12 d-flex justify-content-center ">
                            <img id="chamgeImages" alt="..." class="img-thumbnail" style="width: 200px;" ng-src="public/images/perfil.png" src="public/images/perfil.png">
                          </div>
                        </div>
                      </div>
                    </form>
                    <form method="POST" id="imagesTwo" enctype="multipart/form-data" class="ng-pristine ng-valid">
                      <div class="custom-file mt-3">
                        <input type="file" id="file-uploadTwo" name="image" class="custom-file-input" lang="es" onchange="imgFileAlTwo(this)">
                        <label class="custom-file-label" for="customFileLang" id="namefileTwo">Ingrese imagen de
                          perfil</label>
                      </div>
                      <div class="rounded mx-auto d-block mt-2" id="previewThree"></div>
                      <div class="mt-3 messageEdit" style="display: none;">
                        <label>Desea guardar esta Imagen </label>
                        <button class=" mt-2 btn btn-outline-primary  btn-md  btn-sm  border Save" onclick="saveImagesInServer('TwoTrue')" style="display: none;">Guardar
                          <i class="far fa-save"></i></button>
                        <button class="mt-2 btn btn-outline-danger btn-md btn-sm border EditImageTwo" onclick="saveImagesInServer('TwoFalse')"> Elegir Otra <i class="far fa-edit"></i> </button>
                      </div>
                    </form>
                    <button class="btn btn-warning btn-block mt-2 " id="sendDataPersonal" ng-click="saveImagesP()" disabled="disabled">Actualizar
                      Imagen
                      Principal
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class=" col-md-4">
        <div class="card card-3 mt-3">
          <div class="card-body">
            <form>
              <h4 class="text-center"> Datos Personales</h4>
              <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input type="text" class="form-control" id="nombre" aria-describedby="emailHelp">
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col">
                    <label for="exampleInputEmail1">telefono</label>
                    <input type="text" class="form-control" id="telefono" aria-describedby="emailHelp">
                  </div>
                  <div class="col">
                    <label for="">Privado</label>
                    <label class="switch mt-4">
                      <input type="checkbox" id="privateNumber">
                      <span class="slider"></span>
                    </label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="exampleInputEmail1">Fecha de nacimiento</label>
                <input type="text" class="form-control" id="fechaNacimiento" aria-describedby="emailHelp">
              </div>


              <div class="form-group">
                <label for="exampleInputEmail1">provincia</label>
                <input type="text" class="form-control" id="provincia" aria-describedby="emailHelp">
              </div>

              <div class="form-group">
                <label for="exampleInputEmail1">distrito</label>
                <input type="text" class="form-control" id="distrito" aria-describedby="emailHelp">
              </div>


              <div class="form-group">
                <label for="exampleInputEmail1">numero de identificación</label>
                <input type="text" class="form-control" id="ID" aria-describedby="emailHelp">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Imagen Identificación</label>
                <input type="text" class="form-control" id="imagenID" aria-describedby="emailHelp" disabled>
                <div class="d-flex justify-content-center mt-3">
                  <img class="img-thumbnail" ng-src="/public/images/{{imagesID}}" style="width: 200px;">
                </div>
              </div>

              <button class="btn btn-warning btn-block " ng-click="updateDataPersonal()"><i class="far fa-save m-2"></i>
                Actualizar</button>
            </form>
          </div>
        </div>
      </div>
      <div class=" col-md-4">
        <div class="card card-3 mt-3">
          <div class="card-body">
            <form>
              <h4 class="text-center mt-3">Datos adicionales</h4>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Experiencia</label>
                <textarea class="form-control" id="experiencia" rows="2"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Servicios</label>
                <textarea class="form-control" id="servicios" rows="2"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Servicios especiales</label>
                <textarea class="form-control" id="servEspecial" rows="2"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Servicios adicionales</label>
                <textarea class="form-control" id="servAdicional" rows="2"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Certificaciones</label>
                <textarea class="form-control" id="certificacion" rows="2"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Verificaciones</label>
                <textarea class="form-control" id="verificacion" rows="2"></textarea>
              </div>

              <div class="form-group">
                <label for="exampleInputEmail1">Tarifa</label>
                <input type="text" class="form-control" id="tarifa" aria-describedby="emailHelp">
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Zonas a las que puedo desplazarme </label>
                <textarea class="form-control" id="zonas" rows="2"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Sobre mi </label>
                <textarea class="form-control" id="sobreMi" rows="2"></textarea>
              </div>
              <button class="btn btn-warning btn-block " ng-click="updateAdicionalData()"><i
                  class="far fa-save m-2"></i> Actualizar</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card card-3 mt-3">
         <div class="card-body">
           
           </div>
        </div>
      </div>
    </div>
  </div>
  <%include partials/footer/footer%>
  <% include partials/script/script%>
</body>

</html>